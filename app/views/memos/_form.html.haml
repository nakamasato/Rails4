= form_for @memo do |f|
  - if @memo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@memo.errors.count, "error")} prohibited this memo from being saved:"
      %ul
        - @memo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
